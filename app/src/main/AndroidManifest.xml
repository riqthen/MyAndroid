<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.riqthen.myandroid">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".weather.WeatherActivity"/>
        <activity android:name=".address.AddressActivity"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".retrofit.RetrofitActivity">
        </activity>
        <activity android:name=".okhttplogginginterceptor.LoggingInterceptorActivity">
        </activity>
        <activity android:name=".weixinpay.WeixinPayActivity">
        </activity>
        <activity android:name=".okhttpmvp.OkhttpMvpActivity">
        </activity>
        <activity android:name=".accountflow.AccountFlowActivity">
        </activity>
        <activity android:name=".texttobitmap.TextToBitmapActivity">
        </activity>
        <activity
            android:name=".player.PlayerActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".jiecaoplayer.JiecaoPlayerActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:theme="@style/FullScreenTheme">
        </activity>
        <activity android:name=".giraffeplayer.GiraffePlayerActivity">
        </activity>
        <activity android:name=".giraffeplayer.VideoDetailActivity"/>
        <activity android:name=".regular.RegularActivity">
        </activity>
    </application>

</manifest>